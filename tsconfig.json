{
	"compileOnSave": true,
	"compilerOptions": {
		"strict": true,
		"removeComments": true,
		"lib": ["es2017"],
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"outDir": "src",
		"typeRoots": [
			"node_modules/@types",
			"typings"
		],
		"skipLibCheck": true,
		"baseUrl": "ts",
		"paths": {
			"@logging": ["util/logging"],
			"@config": ["config"],
			"@type-manager": ["../typings/manager"],

			"@base/*": ["*"],

			"@discord/*": ["discord/*"],
			"@music/*": ["music/*"],
			"@site/*": ["site/*"]
		}
	},
	"include": [
		"ts/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
